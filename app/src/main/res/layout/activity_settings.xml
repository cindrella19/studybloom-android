<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/main_bg_lines">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/dark_text"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:padding="10dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/cream_white">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/reminderSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Study Reminders"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                app:thumbTint="@color/soft_pink" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive a nudge to stay on track with your study goals."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/resetDataBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="RESET ALL STUDY DATA"
        android:backgroundTint="#FF5252"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning: This action will permanently delete all your tasks and study statistics."
        android:textColor="#FF5252"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

</LinearLayout>