<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sage_green"/>
        </shape>
    </item>

    <!-- Soft top blob -->
    <item
        android:top="-100dp"
        android:left="-60dp">
        <shape android:shape="oval">
            <size
                android:width="260dp"
                android:height="200dp"/>
            <solid android:color="@color/soft_pink"/>
        </shape>
    </item>

    <!-- Subtle bottom blob -->
    <item
        android:bottom="-120dp"
        android:right="-80dp">
        <shape android:shape="oval">
            <size
                android:width="260dp"
                android:height="220dp"/>
            <solid android:color="@color/cream_white"/>
        </shape>
    </item>

</layer-list>
